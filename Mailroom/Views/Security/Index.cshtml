<!DOCTYPE html>
<html lang="en" ng-app="core" ng-controller="LoginController">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8" />
    <link rel="icon" type="image/png" href="/mailroom/Content/img/fav.png" />
    <!-- Bootstrap CSS -->
    <link type="text/css" rel="stylesheet" media="screen,projection" />
    <title>OCASA</title>
</head>
<body>
    <div id="divLoading">
    </div>
    <div class="container">
        <div class="row" style="padding-top:50px;">
            <div class="mainLogin">
                <div class="card">
                    <div class="card-body">
                        <div style="text-align: center">
                            <img src="~/Content/img/ocasa.png" class="img-fluid" alt="Responsive image" style="width:50%">
                            <hr>
                            <h5>Iniciar sesión</h5>
                        </div>
                        <div class="form-group">
                            <label for="inputUsernameEmail">Usuario</label>
                            <input type="text" autofocus ng-model="item.user" class="form-control" id="inputUsernameEmail">
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Contraseña</label>

                            <input type="password" ng-keypress="pressEnter($event)" ng-model="item.password" class="form-control" id="inputPassword">
                        </div>
                        <div style="text-align: center">
                            <a href="" ng-click="Login()" class="btn btn btnOcasa">Ingresar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div ng-view></div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Styles.Render("~/Content/bootstrap")


    @Scripts.Render("~/Angular/js")

    @Scripts.Render("~/AngularVendor/js")
    @Styles.Render("~/AngularVendor/css")
    @Scripts.Render("~/Pagination/js")


    @Scripts.Render("~/bundles/uibootstrapjs")
    @Scripts.Render("~/angular/core")
    @Styles.Render("~/Common/css")
    @Scripts.Render("~/Common/js")


    @Styles.Render("~/Vendor/css")
    @Scripts.Render("~/Vendor/js")
</body>

</html>